<?xml version="1.0" encoding="utf-8"?>
<lumi.constellation.drawer.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expanded="true"
    app:title="@string/lumi_main">

    <FrameLayout
        android:id="@+id/lumi_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@color/lumi_background_color"
        app:layout_location="main_content"
		app:layout_behavior="@string/appbar_scrolling_view_behavior" />

	<com.google.android.material.navigation.NavigationView
		android:id="@+id/lumiNavigationView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:background="@color/lumi_background_color"
		app:layout_location="drawer_panel"
		app:elevation="0dp"
		app:menu="@menu/lumi_navigation_items"/>

</lumi.constellation.drawer.DrawerLayout>