<?xml version="1.0" encoding="utf-8"?>
<lumi.constellation.drawer.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lumiDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expanded="true"
    app:title="@string/lumi_main">

    <FrameLayout
        android:id="@+id/lumi_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:background="@color/lumi_background_color"
        app:layout_location="main_content"
		app:layout_behavior="@string/appbar_scrolling_view_behavior" />

	<include layout="@layout/lumi_content_drawer" />

</lumi.constellation.drawer.DrawerLayout>